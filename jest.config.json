{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!src/**/*.d.ts",
    "!**/lib/*.{js,jsx,ts,tsx}",
    "!**/test/*.{js,jsx,ts,tsx}",
    "!**/node_modules/**",
    "!**/coverage/**",
    "!**/vendor/**"
  ],
  "coverageDirectory": "./coverage",
  "coverageReporters": ["json", "html", "text", "text-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  }
}
